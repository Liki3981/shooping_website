<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Product Catalog</title>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
  <link rel="stylesheet" href="../public/css/styles.css">
</head>
<body>
  <div class="container">
    <h1 class="text-center mb-4">Product Catalog</h1>
    <div class="row">
      <% products.forEach(product => { %>
        <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
          <div class="card h-100">
            <img src="https://source.unsplash.com/random/200x200?sig=<%= product.id %>" class="card-img-top" alt="Product Image">
            <div class="card-body">
              <h5 class="card-title"><%= product.name %></h5>
              <p class="card-text">$<%= product.price %></p>
              <a href="/product/<%= product.id %>" class="btn btn-primary btn-block">View Details</a>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  </div>
</body>
</html>
